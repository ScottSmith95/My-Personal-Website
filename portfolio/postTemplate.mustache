---
pagination:
  data: collections.posts
  size: 1
  alias: post
permalink: "portfolio/{{post.slug}}/"
---

	{{#post}}
		<title>{{title}} | Scott Smith</title>
		<meta name="title" content="{{meta_title}}">
		<meta name="Description" content="{{meta_description}}">
	{{/post}}

	<!-- CSS -->
	<link rel="stylesheet" href="/assets/styles/partials/global.css">
	<link rel="stylesheet" href="/assets/styles/partials/project.css">
	<link rel="stylesheet" href="/assets/styles/portfolio.css">

</head>

<body class="post-template">

{{#post}}
	<header>
		<nav class="nav">
			<a href="/"><span class="sr-only">Back to </span>Scott<span class="sr-only"> Smith homepage</span></a>
			<h2><a href="/portfolio/">Portfolio</a></h2>
		</nav>
	</header>

	<main class="content" role="main">

		<article class="post {{#featured}}featured{{/featured}} {{slug}}">
			<div class="post-header">
				<img class="post-image" src="{{{feature_image}}}">
				<h1 class="post-title">{{title}}</h1>
			</div>

			<div class="post-content">
				{{{html}}}
			</div>
		</article>

	</main>

	<footer>
		<div class="secondary-items">
			<h2 class="bin-title">More Work</h2>
			<div id="secondary-items-container" class="scroll-well">
				{{> portfolio/bin }}
			</div>
		</div>
	</footer>

{{/post}}

{{> global-script }}
<script type="text/javascript" src="/assets/scripts/portfolio.js"></script>

</body>

</html>
